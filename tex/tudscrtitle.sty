		\@setcolwidth{\titlecolwidth}{\supervisorname}%
	\fi%
	\ifx\@supervisorII\@empty\else%
		\ifstr{\supervisorIIname}{}
			{}{\@setcolwidth{\titlecolwidth}{\supervisorIIname}}%
	\fi%
